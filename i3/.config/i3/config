# hide borders around the windows
hide_edge_borders both

# automatic window switching back and forth
workspace_auto_back_and_forth yes

# assign workspaces
assign   [class="Chromium-browser"]   $workspace1
assign   [class="Firefox"]            $workspace2
assign   [class="Gvim"]               $workspace3
assign   [class="Gnome-terminal"]     $workspace4
assign   [class="Spotify"]            $workspace0

# float
for_window [class="Pavucontrol"] floating enable
for_window [class="Skype"] floating enable
for_window [class="Lastpass"] floating enable

# quickly focus terminal
bindsym $mod+t [class="Gnome-terminal"] focus

# run applications
exec --no-startup-id "unclutter -root"
exec --no-startup-id "dropbox start -i"
exec --no-startup-id "nm-applet"
exec --no-startup-id "blueman-applet"
exec --no-startup-id "xscreensaver -no-splash"
exec --no-startup-id "xfce4-power-manager"
exec_always --no-startup-id feh --bg-scale ~/.wallpaper/bg.jpg
exec --no-startup-id run_keybase
# exec --no-startup-id compton

for_window [class="^.*"] border pixel 1

# follow mouse focus
focus_follows_mouse yes

# Make the currently focused window a scratchpad
bindsym $mod+Shift+z move scratchpad

# Show the first scratchpad window
bindsym $mod+z scratchpad show

# lock screen
bindsym $mod+Shift+x exec xscreensaver-command -lock

# ALSA audio control
bindsym XF86AudioRaiseVolume exec --no-startup-id  "amixer -D pulse sset Master 5%+"
bindsym XF86AudioLowerVolume exec --no-startup-id  "amixer -D pulse sset Master 5%-"
bindsym XF86AudioMute exec --no-startup-id         "amixer -D pulse sset Master toggle"

# brightness control
bindsym F3 exec xbacklight -dec 5
bindsym F4 exec xbacklight -inc 5

# screenie
bindsym Print exec scrot -q 95 '%Y-%m-%d-%s_$wx$h_scrot.png' -e 'mv $f ~/Pictures/Screenshots'

bindsym $mod+m move workspace to output right
